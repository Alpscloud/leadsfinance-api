.sect__promo
	// min-height 100vh
	// padding 100px 0
	min-height 1060px
	padding-top 240px
	// display flex
	// align-items center
	// position relative
	
	&:before
		pseudo()
		fullSize()
		position absolute
		background radial-gradient(18.46% 30.43% at 28.41% 45.44%, #1B1D2D 0%, #2D324E 100%), radial-gradient(40.91% 75.72% at 78.46% 68.88%, rgba(39, 73, 124, 0.67) 0%, rgba(44, 34, 71, 0.94) 100%)
		opacity 0.6
		z-index 2
	
	&:after
		pseudo()
		position absolute
		right 0
		top 0
		width 1629px
		height 1095px
		background url('../img/backgrounds/triple-waves-and-lines.svg') 50% 50% no-repeat

.promo
	&__block
		position relative
		&--content
			position relative
			z-index 5
			
	&__calc
		&--title
			font 24px $SFSemiBold
			line-height 29px
			margin-bottom 40px
			span
				font-family $SFBold
				
		&--input
			display block
			width 45px
			background transparent
			box-shadow none 
			outline none
			border-radius 0
			border-bottom 1px solid $accent-color
			color $accent-color
			font 18px $SFReg
			line-height 1
			text-align center
			&::-webkit-outer-spin-button,
			&::-webkit-inner-spin-button 
				-webkit-appearance none
				margin 0
			
			&-label
				margin-right 13px
				font 14px $SFMed
				

			

	


	

.api
	display block
	width 488px
	height 803px
	background url('../img/api.svg') 50% 50% no-repeat / 488px 803px
	position absolute
	vertical-center()
	left -200px
	z-index 1
	

.title
	font 42px $SFSemiBold
	line-height 50px
	margin-bottom 15px
	
.subtitle
	font-size 18px
	font-indent 5px
	line-height 23px
	

.earnings
	margin-bottom 35px
	&__title
		text-transform uppercase
		font 18px $Med
		margin-bottom 17px
		
	&__block
		width 285px
		height 53px
		position relative
		flex-col-center()
		font 31px $SFBold
		text-align center
		padding 10px
		white-space nowrap
		border-top 2px solid $accent-color
		border-left 2px solid $accent-color
		border-right 2px solid $accent-color
		flex none
		margin-right 15px
		&:before,
		&:after
			pseudo()
			height 2px
			background-color $accent-color
			position absolute
			bottom 0
			width 115px
		&:before
			left 0
		&:after
			right 0
		p
			line-height 1
		span
			display inline-block
			margin-right 6px
			
	&__notice
		text-align left
		font 12px $Med
		

// Sect content
.sect__content
	position relative
	z-index 4
.support
	margin-bottom 40px
	font 16px $SFReg
	a
		color inherit
		&:hover
			color $accent-color
			
.advantages
	margin-bottom 120px
	
.advantage
	flex-col-center()
	text-align center
	color $light-color
	font 14px $Reg
	line-height 18px
	padding 45px 55px
	position relative
	height 100%
	overflow hidden
	&:before
		pseudo()
		fullSize()
		position absolute
		background radial-gradient(6.71% 96.87% at 50.5% 96.88%, rgba(16, 31, 55, 0.2065) 2.08%, rgba(30, 34, 41, 0.1645) 96.87%)
		opacity 0.25
		box-shadow 4px 3px 31px rgba(0, 0, 0, 0.06)
		z-index -1
	&__ic
		display block
		width 61px
		height 61px
		background-repeat no-repeat
		background-size 61px 61px
		margin-bottom 20px
	&__wrapper
		width 33.3333%
		padding 15px
		

.faq
	margin-bottom 80px
	&__question
		position relative
		overflow hidden
		border-radius 5px
		margin-bottom 30px
		&:last-child
			margin-bottom 
		&:before
			pseudo()
			fullSize()
			position absolute
			background radial-gradient(6.71% 96.87% at 50.5% 96.88%, rgba(16, 31, 55, 0.2065) 2.08%, rgba(30, 34, 41, 0.1645) 96.87%)
			opacity 0.25
			box-shadow 4px 3px 31px rgba(0, 0, 0, 0.06)
			z-index -1
		&--title
			font 21px $SFBold
		&--header
			padding 30px
			cursor pointer
			position relative
			&:after
				pseudo()
				position absolute
				right 30px
				top 50%
				margin-top -16.5px
				width 33px
				height 33px
				background url('../img/icons/svg/arrow.svg') 50% 50% no-repeat / 33px 33px
				transform-origin 50% 50%
				transition transform .17s ease-in-out
				
			&.is-toggled
				&:after
					transform rotate(180deg)
		&--body
			padding 0 30px 30px 30px
			display none
			
			li
				font-size 14px
				line-height 18px
				margin-bottom 10px
				font-family $Reg
				b
					display inline-block
					margin-left 7px
				&:last-child
					margin-bottom 0
		&--col
			width 50%
			padding-right 15px
	&__img
		&--col
			width 50%
			padding-left 15px
			img
				display block