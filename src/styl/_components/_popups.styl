.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 730px
		
		background-color $popup-body-bg
		padding 20px 40px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		border-radius 15px
		
		color $dark-text-color
	&__content
		min-height 400px
		display flex
		flex-direction column
		align-items center
		justify-content center	
	&__title
		text-transform uppercase
		font 64px $Bold
		color $accent-color
		&--sm
			font-size 36px
		
	&__text
		text-transform uppercase
		font 18px $Bold
		
	.content
		color $dark-text-color
		margin-top 20px
		text-align left
		font-size 16px
		p
			margin-bottom 15px
			&:last-child
				margin-bottom 0
				
		b, strong
			font-family $Bold
			
		a
			color $accent-color
			text-decoration underline
			&:hover
				text-decoration none
				
		h2,h3,h4,h5,h6
			font-family $Bold
			margin-bottom 15px
			&:last-child
				margin-bottom 0
				
		h2
			font-size 32px
		h3
			font-size 28px
		h4
			font-size 24px
		h5
			font-size 20px
		h6
			font-size 18px
		
	.btn__close
		position absolute
		top 10px
		right 10px

