		margin-bottom 15px
		
	.subtitle
		font-size 16px
	
	.sect__promo
		padding-bottom 35px
			
	.promo
		&__calc
			&--title
				font-size 18px
			&--input
				&-range
					max-width 250px
				
	
	.earnings
		margin-bottom 25px
		&__row
			flex-wrap nowrap
		&__block
			font-size 24px
			width 220px
			margin-right 0
			&:before,
			&:after
				width 75px
		&__title
			font-size 

	

	.support
		margin-bottom 65px
		
	.advantages
		margin-bottom 25px
		
	.advantage
		font-size 12px
		padding 20px 6px
		&__ic
			width 49px
			height 49px
			background-size 49px 49px
			margin-bottom 20px
			
	.faq__question
		margin-bottom 20px
		&:last-child
			margin-bottom 0
			
		&--title
			font-size 16px
		&--header
			padding 20px 65px 20px 20px
			&:after
