// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1550px)
	body
		&:before
			top 540px
	.sect__promo
		padding-top 80px
		padding-bottom 80px
		min-height 640px
		
		.logo
			top 25px
		
	.api
		width 330px
		height 543px
		background-size 330px 543px
		top 0
		left -120px
		
+max-screen(1365px)
	.api
		display none
		
+max-screen(1000px)
	body
		&:before
			top 600px
	.sect__promo
		padding-top 140px
		&:after
			display none
	.promo
		&__title--block
			width 50%
			padding-right 20px
		&__calc
			&--block
				width 50%
				padding-left 20px
			&--title
				font-size 20px
			
	.title
		font-size 33px
		line-height 42px
		
	.earnings__notice
		width 100%
		margin-left 0
		margin-top 20px
		
	.advantage
		padding 30px
		
	.input__wrapper
		padding 15px
		width 50%
		&:first-child
			margin-right 0
		
	.inputs__row
		margin-bottom 40px
		margin-left -15px
		margin-right -15px
		
	.sect__title
		margin-bottom 40px
		
+max-screen(767px)
	.js-item-parallax
		transform none !important
		
	body
		&:before
			top 850px
	
	.btn
		padding-left 20px
		padding-right 20px
			
	.promo
		&__title--block
			width 100%
			padding-right 0
			margin-bottom 45px
		&__calc
			&--block
				width 100%
				position relative
				padding-left 0
				padding-top 35px
				&:before
					pseudo()
					position absolute
					top 0
					left -30px
					right -30px
					height 300%
					background-color rgba(50, 56, 87, 0.75)
					z-index -1
			&--title
				margin-bottom 20px
				
			&--input
				&-range
					margin 20px 0
					
					
	.earnings__notice
		width auto
		margin-left 10px
		margin-top 0
			
	.sect__promo
		padding-top 80px
		
		&:before
			display none
		
		.logo
			top 20px
			img
				max-width 160px
				
	
	.traffic
		display none
	.faq
		&__item--row
			flex-wrap wrap
		&__question--col
			bottom auto
			width 100%
			padding-right 0
			order 2
		&__img--col
			bottom auto
			width 100%
			margin-bottom 50px
			padding-left 0
			order 1
			
	.advantages
		&__row
			flex-wrap wrap		
			margin-left -7.5px
			margin-right -7.5px
	.advantage
		&__wrapper

			padding 7.5px
			width 50%
			&:last-child
				width 100%
				
	.popup
		&__body
			padding 30px 20px
		&__title
			font-size 40px
			&--sm
				font-size 20px
		&__content
			min-height auto
			padding 0
		&__text
			font-size 14px
			
		.content
			font-size 12px
			h6
				font-size 14px
			h5
				font-size 16px
			h4
				font-size 18px
			h3
				font-size 20px
			h2
				font-size 22px
				
	.container
		padding 0 25px

+max-screen(620px)
	.input__wrapper
		width 100%
		
	.inputs__row
		margin-bottom 15px
		
	.checkbox
		padding-left 35px
		&__wrapper
			margin-bottom 30px		
			
	.footer
		padding 40px 0
		.row
			flex-direction column
			align-items center
			
		.logo
			margin-bottom 35px		
			


