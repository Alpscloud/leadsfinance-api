// ========== ========== G L O B A L   S T Y L E S ========== ==========
html
	text-size-adjust none
	box-sizing border-box
	&.is-fixed
		overflow hidden
	
*
	padding 0
	margin 0
	box-sizing inherit
	&:after,
	&:before
		box-sizing inherit


body
	font 16px $SFMed
	line-height 1.45
	overflow-x hidden
	min-width 320px
	height 100%
	opacity 1
	position relative
	color $text-color
	// background radial-gradient(113.39% 50.58% at 18.29% 62.8%, #0A3C4D 0%, rgba(53, 44, 80, 0) 100%), linear-gradient(176.42deg, rgba(58, 71, 107, 0) 3.16%, #39466A 12.47%, #433C5D 39.38%) top 597px center no-repeat,  url('../img/backgrounds/bg.jpg') top center no-repeat
	background url('../img/backgrounds/bg.jpg') top center no-repeat
	

	&:before
		pseudo()
		position absolute
		top 780px
		
		left 0
		width 100%
		bottom 0
		background radial-gradient(113.39% 50.58% at 18.29% 62.8%, #0A3C4D 0%, rgba(53, 44, 80, 0) 100%), linear-gradient(176.42deg, rgba(58, 71, 107, 0) 3.16%, #39466A 12.47%, #433C5D 39.38%) top center no-repeat
		z-index 3
		

	
.sect__content
	background url('../img/backgrounds/waves-bg.svg') bottom -140px center no-repeat
	padding-bottom 190px
	

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea
	outline none
	background transparent
	border none
	box-shadow none
	transition all .17s ease-in-out
	&:focus
		outline none
		
textarea
	resize vertical
	width 100%
	
select
	appearance none
	-webkit-appearance none
	-moz-appearance none
	transition all .17s ease-in-out
	cursor pointer
	&:focus
		outline none

a
	text-decoration none
	outline none
	transition all .17s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .17s ease-in-out
	background transparent
	&:focus
		outline none

img
	max-width 100%
	height auto
	
b,strong
	font-family $SFBold
// ========== ========== ========== ========== ========== ==========

// ========== ========== M A I N   S T Y L E S ========== ==========

.disable-hover,
.disable-hover * 
	pointer-events none !important

.clearfix:before,
.clearfix:after
	content " "
	display table

.clearfix:after
	clear both

.gutters
	padding $gutters
.gutter
	&__top
		padding-top $gutter-top
	&__bottom
		padding-top $gutter-bottom
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%
	
.sect
	&__title
		font 36px $SFBold
		margin-bottom 65px
		line-height 43px
		


.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.light-color
	color $light-color

.dark-color
	color $dark-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.dark-bg
	background-color $dark-bg


.t-t-uppercase
	text-transform uppercase

