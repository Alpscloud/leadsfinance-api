// Loader
.preloader
	display block
	position absolute
	position-center()
	z-index 1001
	perspective 500px
	span
		display block
		width 40px
		height 40px
		// background-color $dark-color
		
		
	&__ic
		display block
		width 40px
		height 40px
		background url('../img/icons/svg/settings.svg') 50% 50% no-repeat / 40px 40px
		position relative
		animation rotation 2s linear infinite
		&:nth-child(2)
			width 30px
			height 30px
			background-size 30px 30px
			animation rotation-reverse 2s linear infinite
			position absolute
			top 100%
			left -2px
			margin-top -2px
		
		
	&__wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 1000
	&__section
		position fixed
		top 0
		width 51%
		height 100%
		background-color rgba(50, 56, 87, 1)
		z-index 1000
		transform translateX(0)
		&--left
			left 0
		&--right
			right 0
			
@keyframes rotation
	100%
		transform rotate(360deg)
		
@keyframes rotation-reverse
	100%
		transform rotate(-360deg)
			


.is-loaded

	.preloader
		opacity 0
		transition all 0.3s ease-out
		&__wrapper
			visibility hidden
			transition all 0.3s 1s ease-out
		&__section
			&--left
				transform translateY(-100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
			&--right
				transform translateY(100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
